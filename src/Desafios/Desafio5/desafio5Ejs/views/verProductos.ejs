<!DOCTYPE html>
<html lang="en">

<head> <%- include(`./partials/head`) %></head>

<body>
    <div class="container">
        <header> <%- include('./partials/header', {current: `verProductos`}) %> </header>
        
        <main>

            <div class="jumbotron">
                <h3> Productos disponibles: <%= allProducts.length %>
                </h3>
            </div>

            <% if (allProducts.length <=0) { %>
                <p>No se encontraron datos.</p>
                <% } else { %>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Name</th>
                                <th scope="col">Price</th>
                                <th scope="col">Photo</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% allProducts.forEach(product=>{ %>
                                <tr>
                                    <th scope="row">
                                        <%= product.id %>
                                    </th>
                                    <td>
                                        <%= product.title %>
                                    </td>
                                    <td>
                                        $<%= product.price %>
                                    </td>
                                    <td>
                                        <img src="<%= product.thumbnail %>" width="60" height="60" >
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                    <% } %>
        </main>

        <footer>
            <%- include('./partials/footer') %>
        </footer>

    </div>

</body>

</html>